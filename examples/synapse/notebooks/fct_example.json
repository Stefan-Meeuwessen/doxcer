        "source": [
          "# fct_example notebook\n",
          "This notebook simulates a bronze-to-gold sales aggregation in Azure Synapse.\n"
        ]
      },
      {
        "cell_type": "code",
        "metadata": {
          "tags": [
            "parameters"
          ]
        },
        "source": [
          "p_load_date = \"2026-02-13\"\n",
          "p_force_full_load = False\n"
        ],
        "execution_count": null,
        "outputs": [],
        "attachments": {}
      },
      {
        "cell_type": "code",
        "metadata": {},
        "source": [
          "from pyspark.sql import functions as F\n",
          "\n",
          "bronze_orders_df = spark.createDataFrame(\n",
          "    [\n",
          "        (\"1001\", \"C001\", \"2026-02-13\", 125.50, \"completed\"),\n",
          "        (\"1002\", \"C002\", \"2026-02-13\", 20.00, \"cancelled\"),\n",
          "        (\"1003\", \"C001\", \"2026-02-13\", 88.00, \"completed\")\n",
          "    ],\n",
          "    [\"order_id\", \"customer_id\", \"order_date\", \"order_amount\", \"status\"]\n",
          ")\n"
        ],
        "execution_count": null,
        "outputs": [],
        "attachments": {}
      },
      {
        "cell_type": "code",
        "metadata": {},
        "source": [
          "gold_fct_daily_customer_sales_df = (\n",
          "    bronze_orders_df\n",
          "    .filter(F.col(\"status\") == \"completed\")\n",
          "    .groupBy(\"order_date\", \"customer_id\")\n",
          "    .agg(\n",
          "        F.sum(\"order_amount\").alias(\"daily_revenue\"),\n",
          "        F.count(\"*\").alias(\"order_count\")\n",
          "    )\n",
          ")\n",
          "\n",
          "gold_fct_daily_customer_sales_df.createOrReplaceTempView(\"vw_fct_daily_customer_sales\")\n"
        ],
        "execution_count": null,
        "outputs": [],
        "attachments": {}
      },
      {
        "cell_type": "code",
        "metadata": {},
        "source": [
          "row_count = gold_fct_daily_customer_sales_df.count()\n",
          "print(f\"Rows prepared for load date {p_load_date}: {row_count}\")\n",
          "mssparkutils.notebook.exit(\"success\")\n"
        ],
        "execution_count": null,
        "outputs": [],
        "attachments": {}
      }
    ]
